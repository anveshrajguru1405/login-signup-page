<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      /* General styles for body and headings */
      body {
        margin: 0;
        min-height: 100vh;
        display: grid;
        place-content: center;
        background: repeating-linear-gradient(
          -45deg,
          #fff 0 20px,
          #f9f9f9 0 40px
        );
        background: rgb(52, 2, 43);
        background: linear-gradient(
          90deg,
          rgba(52, 2, 43, 1) 3%,
          rgba(2, 0, 36, 1) 52%,
          rgba(1, 50, 59, 1) 85%
        );
        font-family: "Georgia", serif;
        color: rgba(221, 115, 115, 0.53);
      }

      /* Additional styles for specific elements */
      h1 {
        text-align: center;
        font-size: 2em;
        margin-bottom: 20px;
      }

      form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      label {
        margin-bottom: 5px;
      }

      input {
        padding: 10px;
        margin-bottom: 15px;
        width: 100%;
        box-sizing: border-box;
      }

      button {
        width: 180px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 5px;
        height: 45px;
        text-align: center;
        border: none;
        background-size: 300% 100%;
        border-radius: 50px;
        transition: all 0.4s ease-in-out;
        background-image: linear-gradient(
          to right,
          #ed6ea0,
          #ec8c69,
          #f7186a,
          #fbb03b
        );
        box-shadow: 0 4px 15px 0 rgba(236, 116, 149, 0.75);
      }
      body .container {
        text-align: center;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        width: 400px;
        display: flex !important;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }
      button:hover {
        background-position: 100% 0;
        transition: all 0.4s ease-in-out;
      }

      button:focus {
        outline: none;
      }
      input {
        background-color: rgba(255, 255, 255, 0.1);
        /* Adjust the opacity to your liking */
        color: #113a62;
        border: none;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        width: 80%;
        box-sizing: border-box;
        outline: none;
        background: linear-gradient(
          to right,
          rgba(255, 153, 102, 0.8),
          rgba(255, 94, 98, 0.8)
        );
      }
      input::placeholder {
        color: #113a62;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <form
        id="forgot-password"
        autocomplete="off"
        method="post"
        action="/reset-password"
      >
        <!-- Change the action to the route that handles password reset -->
        <div id="forgot-password-form" class="box shadow">
          <h2>Forgot Password</h2>
          <label for="user-id">User ID:</label>
          <input
            type="text"
            id="user-id"
            name="user-id"
            placeholder="User ID"
            required
          />
          <label for="forgot-email">Email:</label>
          <input
            type="email"
            id="forgot-email"
            name="email"
            placeholder="Email"
            required
          />
          <button type="submit">
            <span class="bn39span">Submit</span>
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
